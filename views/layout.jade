doctype html
html(lang='en')
	head
		meta(charset="utf-8")
		link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css", rel="stylesheet")
		link(href="/css/main.css", rel="stylesheet")
		title Ajax Countries

	body
		.row.color-row
			.container-fluid
				.col-xs-10.col-xs-offset-1.col-sm-4.col-sm-offset-8
					.input-group
						input.form-control(name="search" placeholder="Search for a country")
						span.input-group-btn
							button.btn.btn-default#search(type="submit") Go!
		block content

	script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js")
	script(src="/js/main.js")
		